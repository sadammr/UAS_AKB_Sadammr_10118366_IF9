<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfilFragment"
    android:background="@color/black">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgProfile"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/profil"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/deskripsi_gambar" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgProfile"
        android:background="@color/white"
        android:paddingTop="30dp" >

    <TextView
        android:id="@+id/txtNama2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/nama2"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/txtNim2"
        android:textSize="25sp"
        android:text="@string/nim2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNama2"/>

    <TextView
        android:layout_marginHorizontal="50dp"
        android:id="@+id/txtKelas2"
        android:textSize="25sp"
        android:text="@string/kelas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNim2"/>
    </RelativeLayout>

</RelativeLayout>